    android:layout_height="wrap_content">
    <Button
        android:id="@+id/mapid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login1"
        android:text="Login"
